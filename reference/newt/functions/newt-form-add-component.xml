<refentry xml:id="function.newt-form-add-component" xmlns="http://docbook.org/ns/docbook">

 <refnamediv>
  <refname>newt_form_add_component</refname>
  <refpurpose>Добавляет один компонент в форму</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>newt_form_add_component</methodname>
   <methodparam><type>resource</type><parameter>form</parameter></methodparam>
   <methodparam><type>resource</type><parameter>component</parameter></methodparam>
  </methodsynopsis>
  <para>
   Добавляет один компонент в <parameter>form</parameter>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>form</parameter></term>
     <listitem>
      <para>
       Форма, в которую будет добавлен компонент
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>component</parameter></term>
     <listitem>
      <para>
       Компонент для добавления в форму
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.void;
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>newt_form_add_component</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$form = newt_form();

$options = array("Настройка аутентификации", "Настройка брандмауэра",
"Настройка мыши", "Настройка сети", "Настройка принтера",
"Системные сервисы");

$list = newt_listbox(3, 2, 10);

foreach ($options as $l_item) {
    newt_listbox_add_entry($list, $l_item, $l_item);
}

newt_form_add_component($form, $list);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>newt_form_add_components</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

