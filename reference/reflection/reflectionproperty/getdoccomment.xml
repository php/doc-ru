<refentry xml:id="reflectionproperty.getdoccomment" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionProperty::getDocComment</refname>
  <refpurpose>Получение документируемого комментария для свойства</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>ReflectionProperty::getDocComment</methodname>
   <void />
  </methodsynopsis>
  <para>
   Получает документируемый комментарий для свойства.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Комментарий к свойству.
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример <methodname>ReflectionProperty::getDocComment</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
class Str
{
    /**
     * @var int  The length of the string
     */
    public $length = 5;
}

$prop = new ReflectionProperty('Str', 'length');

var_dump($prop->getDocComment());

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
string(53) "/**
     * @var int  The length of the string
     */"
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionProperty::getModifiers</methodname></member>
    <member><methodname>ReflectionProperty::getName</methodname></member>
    <member><methodname>ReflectionProperty::getValue</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

