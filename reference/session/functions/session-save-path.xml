     <row>
      <entry>8.0.0</entry>
      <entry>
       <parameter>path</parameter> теперь может быть &null;.
      </entry>
     </row>
    </tbody>
   </tgroup>
  </informaltable>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member>
     <link linkend="ini.session.save-path">session.save_path</link>
    </member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

