       <entry>Константа</entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>1</entry>
       <entry><constant>IMAGETYPE_GIF</constant></entry>
      </row>
      <row>
       <entry>2</entry>
       <entry><constant>IMAGETYPE_JPEG</constant></entry>
      </row>
      <row>
       <entry>3</entry>
