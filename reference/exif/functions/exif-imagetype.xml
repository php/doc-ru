 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Пример использования <function>exif_imagetype</function></title>
   <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'Картинка не gif';
}
?>
]]>
   </programlisting>
  </example>
