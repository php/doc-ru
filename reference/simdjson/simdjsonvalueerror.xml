     <ooclass>
      <classname>SimdJsonValueError</classname>
     </ooclass>

     <ooclass>
      <modifier>extends</modifier>
      <classname>ValueError</classname>
     </ooclass>
    </classsynopsisinfo>
    <!-- }}} -->
    <classsynopsisinfo role="comment">&InheritedProperties;</classsynopsisinfo>
