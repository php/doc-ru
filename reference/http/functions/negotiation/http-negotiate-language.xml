 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>http_negotiate_language</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$langs = array(
        'en-US',// язык по умолчанию (если не будет совпадений)
        'fr',
        'fr-FR',
        'de',
        'de-DE',
        'de-AT',
        'de-CH',
);

include './langs/'. http_negotiate_language($langs, $result) .'.php';

print_r($result);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>


