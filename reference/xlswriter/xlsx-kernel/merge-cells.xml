<refentry xml:id="vtiful-kernel-excel.mergeCells" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Vtiful\Kernel\Excel::mergeCells</refname>
  <refpurpose>Объединить ячейки</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <methodname>Vtiful\Kernel\Excel::mergeCells</methodname>
   <methodparam><type>string</type><parameter>scope</parameter></methodparam>
   <methodparam><type>string</type><parameter>data</parameter></methodparam>
  </methodsynopsis>
  <para>
    Объединить ячейки.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>scope</parameter></term>
    <listitem>
     <para>
      начальные и конечные строки координат ячейки
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>data</parameter></term>
    <listitem>
     <para>
      данные строки
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Экземпляр <classname>Vtiful\Kernel\Excel</classname>
  </para>
 </refsect1>

<refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Пример использования</title>
   <programlisting role="php">
<![CDATA[
<?php
$config = [
    'path' => './tests'
];

$excel = new \Vtiful\Kernel\Excel($config);

$excel->fileName("test.xlsx")
        ->mergeCells('A1:C1', 'Merge cells')
        ->output();
]]>
   </programlisting>
  </example>
 </refsect1>

</refentry>

