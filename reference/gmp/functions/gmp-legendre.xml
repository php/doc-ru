<refentry xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://docbook.org/ns/docbook" xml:id="function.gmp-legendre">
 <refnamediv>
  <refname>gmp_legendre</refname>
  <refpurpose>Символ Лежандра</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>gmp_legendre</methodname>
   <methodparam><type>GMP</type><parameter>a</parameter></methodparam>
   <methodparam><type>GMP</type><parameter>p</parameter></methodparam>
  </methodsynopsis>
  <para>
   Вычисляет 
   <link xlink:href="&url.symbole-legendre;">
   символ Лежандра</link> чисел <parameter>a</parameter> и
   <parameter>p</parameter>. <parameter>p</parameter> должно быть нечетным
   и положительным.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>a</parameter></term>
     <listitem>
      &gmp.parameter; 
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>p</parameter></term>
     <listitem>
      &gmp.parameter; 
      <para>
       Должно быть положительным и нечетным.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &gmp.return;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>gmp_legendre</function></title>
    <programlisting role="php">
<![CDATA[
<?php
echo gmp_legendre("1", "3") . "\n";
echo gmp_legendre("2", "3") . "\n";
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
1
0
]]>
    </screen>
   </example>
  </para>
 </refsect1>

</refentry>

