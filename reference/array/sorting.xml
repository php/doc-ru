      <entry><function>uksort</function></entry>
     </row>
     <row>
      <entry><function>uksort</function></entry>
      <entry>ключу</entry>
      <entry>да</entry>
      <entry>определяется пользователем</entry>
      <entry><function>uasort</function></entry>
     </row>
     <row>
      <entry><function>usort</function></entry>
      <entry>значению</entry>
      <entry>нет</entry>
      <entry>определяется пользователем</entry>
      <entry><function>uasort</function></entry>
     </row>
    </tbody>
   </tgroup>
  </table>
 </para>
