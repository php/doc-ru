   <simplelist>
    <member><link linkend="intl.collator-constants">Константы <classname>Collator</classname></link></member>
    <member><function>collator_sort</function></member>
    <member><function>collator_asort</function></member>
   </simplelist>
  </para>
 </refsect1>
