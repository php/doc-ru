 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>sha1</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$str = 'яблоко';
                     
if (sha1($str) === '88b184adea10bf987b15257a5d6c5cb94eba69d3') {
    echo "Желаете зеленое или красное яблоко?";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

