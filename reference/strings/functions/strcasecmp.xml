 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример сравнения строк функцией <function>strcasecmp</function></title>
    <programlisting role="php">
<![CDATA[
<?php

$var1 = "Hello";
$var2 = "hello";

if (strcasecmp($var1, $var2) == 0) {
    echo 'Перменная $var1 равна переменной $var2 при сравнении без учёта регистра';
}

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

