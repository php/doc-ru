 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Пример использования <function>stristr</function></title>
    <programlisting role="php">
<![CDATA[
<?php
  $email = 'USER@EXAMPLE.com';
  echo stristr($email, 'e'); // выводит ER@EXAMPLE.com
  echo stristr($email, 'e', true); // Начиная с PHP 5.3.0, выводит US
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
    <title>Проверка на вхождение строки</title>
    <programlisting role="php">
<![CDATA[
<?php
  $string = 'Hello World!';
  if(stristr($string, 'earth') === FALSE) {
    echo '"earth" не найдена в строке';
  }
// выводит: "earth" не найдена в строке
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
    <title>Использование "нестроки" в поиске</title>
    <programlisting role="php">
<![CDATA[
<?php
  $string = 'APPLE';
  echo stristr($string, 97); // 97 = a в нижнем регистре
// выводит: APPLE
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

