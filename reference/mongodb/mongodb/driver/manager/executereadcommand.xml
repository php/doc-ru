   &mongodb.parameter.db;
   &mongodb.parameter.command;
   <varlistentry>
    <term><parameter>options</parameter></term>
    <listitem>
     <para>
      <table>
       <title>options</title>
       <tgroup cols="3">
        <thead>
         <row>
          <entry>Опция</entry>
