     <initializer>"Single"</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>string</type>
     <varname linkend="mongodb-driver-topologydescription.constants.type-sharded">MongoDB\Driver\TopologyDescription::TYPE_SHARDED</varname>
