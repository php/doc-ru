     <type>string</type>
     <varname linkend="mongodb-driver-topologydescription.constants.type-unknown">MongoDB\Driver\TopologyDescription::TYPE_UNKNOWN</varname>
     <initializer>"Unknown"</initializer>
    </fieldsynopsis>
    <fieldsynopsis>
     <modifier>const</modifier>
     <type>string</type>
