<refentry xml:id="context.phar" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" role="noversion">
 <refnamediv>
  <refname>Контекстные опции Phar </refname>
  <refpurpose>Список контекстных опций  Phar</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <para>
    Контекстные опции для обёртки <literal>phar://</literal>.
  </para>
 </refsect1>

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.phar.compress">
     <term>
      <parameter>compress</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       Одна из <link linkend="phar.constants.compression">констант Phar сжатия</link>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.phar.metadata">
     <term>
      <parameter>metadata</parameter>
      <type>mixed</type>
     </term>
     <listitem>
      <para>
       Phar метаданные. См. <function>Phar::setMetadata</function>.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="wrappers.phar" /></member>
    <member><link linkend="phar.using.stream">потоки Phar</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
 
